<!-- t2v.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini</title>
    <link rel="stylesheet" href="t2v.css">
</head>
<body>
  <div id="t2vhd"><h1>Audio Modulation</h1></div>
  <div id="parent-cont">
        <div class="container">
          <div class="login form">
            <header style="color: rgb(206, 102, 5);">Upload Files</header>
            <form action="/submit" method="post" enctype="multipart/form-data">
              
              <p class="hdfields">TextFile</p><input type="text" class="filefield" placeholder="textfile" name="text" id="text">
              <p class="hdfields">AudioFile</p><input type="file" class="filefield" placeholder="audiofile" name="audiofile" id="audiofile">    
              <input type="submit" class="button" onclick="process()" value="Generate">
              <div id="downd"><a href="/received_audio.wav">Download Audio File</a></div>
            </form>
            <% if (fileReceivedMessage) { %>
              <!-- <p style="color: green;">
                <%= fileReceivedMessage %>
              </p> -->
              <script>
                const submitButton = document.getElementById('downd');
                submitButton.style.visibility = 'visible';
                submitButton.style.backgroundColor = 'green';
              </script>
            <% } %>
          </div>
        </div>
        <div class="loginimage">
          <img src="music-folder.png" alt="loginpicture" class="image">
          <div class="overlay">
            <div class="text">This is a Text-to-Speech (TTS) model that allows you to clone your voice. Simply provide a sample of your voice recording and any text you want converted to speech. The model will then generate realistic audio that sounds just like you reading the text. <br><br>
            Note: The audio file must be in wav format, if you have trouble in convertion <a style="text-decoration: none;" href="https://www.freeconvert.com/mp3-to-wav" target="_blank">Click here</a> </div>
          </div>
      </div>
    </div>
  </body>
</html>